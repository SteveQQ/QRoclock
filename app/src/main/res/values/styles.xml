<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_brown_500</item>
        <item name="colorPrimaryDark">@color/material_brown_00</item>
        <item name="colorAccent">@color/material_deep_orange_A700</item>
        <item name="android:textColorPrimaryInverse">@color/material_light_blue_300</item>
        <item name="android:colorBackground">@color/material_brown_100</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>

        <!--Apply default style for alarm dialog -->
        <item name="android:alertDialogTheme">@style/AppAlarmTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppAlarmTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/material_brown_00</item>
        <item name="android:textColor">@color/material_deep_orange_A700</item>
    </style>
</resources>
